{% extends 'base.html.twig' %}

{% block title %}
    Alert Message!
{% endblock %}

{% block body %}

<div class="container">
	<div class="col-md-12">
		<div class="page-header margin-none">
			<h2 class="padding-none">Users with possible attendance infractions</h2>
		</div>
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Username</th>
						<th>Name</th>
						<th>Email</th>
						<th>Entry Time</th>
						<th>Depart Time</th>
						<th>Difference</th>
					</tr>
				</thead>
				<tbody>
					{% for register in registerAlert %}
						<tr>
							<td>{{ register.username }}</td>
							<td>{{ register.name }}</td>
							<td>{{ register.email }}</td>
							<td>{{ register.entry|date('d-m-Y H:i') }}</td>
							<td>{{ register.depart|date('d-m-Y H:i') }}</td>
							<td>{{ register.difference }}</td>
							<td>
								<a href="#" class="btn btn-sm btn-info">View</a>
								{% if is_granted('ROLE_ADMIN') %}
								<a href="#" class="btn btn-sm btn-primary">Edit</a>
								<a href="#" class="btn btn-sm btn-danger btn-delete">Delete</a>
								{% endif %}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
    
{% endblock %}